[SR]MAIL)
		for prog in emacs xemacs; do				\
		    gitwhich "$prog";					\
		    if test $? -eq 0; then				\
		        FILE_VIEWER="$prog";				\
		        break;						\
		    fi;							\
		done;							\
		if test "$FILE_VIEWER"; then				\
		    if test "$DISPLAY"; then				\
		        ("$FILE_VIEWER" "$file" > /dev/null 2>&1 &);	\
		    else						\
		        "$FILE_VIEWER" "$file";				\
		    fi;							\
		else							\
		    echo "Emacs not found in PATH.";			\
		    echo "$msgView"; read key;				\
		    "$GIT_PAGER" "$file";				\
		    echo "$msg"; read key;				\
		fi;;

INBOX|OUTBOX)
		gitwhich xemacs;					\
		if test $? -eq 0; then					\
		    FILE_VIEWER=xemacs;					\
		fi;							\
		if test "$FILE_VIEWER"; then				\
		    if test "$DISPLAY"; then				\
		        ("$FILE_VIEWER" "$file" > /dev/null 2>&1 &);	\
		    else						\
		        "$FILE_VIEWER" "$file";				\
		    fi;							\
		else							\
		    echo "XEmacs not found in PATH.";			\
		    echo "$msgView"; read key;				\
		    "$GIT_PAGER" "$file";				\
		    echo "$msg"; read key;				\
		fi;;

*.[bB][zZ])
		bunzip -c "$file" | "$GIT_PAGER";			\
		echo "$msg"; read key;;

*.[bB][zZ]2)
		bunzip2 -c "$file" | "$GIT_PAGER";			\
		echo "$msg"; read key;;

*.[gG][zZ] |\
*.[zZ])
		gunzip -c -- "$file" | "$GIT_PAGER";			\
		echo "$msg"; read key;;

*.[zZ][iI][pP])
		unzip -v "$file" | "$GIT_PAGER";			\
		echo "$msg"; read key;;

*.[aA][rR][jJ] |							\
*.[aA][0-9][1-9])
		unarj l "$file" | "$GIT_PAGER";				\
		echo "$msg"; read key;;

*.[rR][aA][rR])
		unrar l "$file" | "$GIT_PAGER";				\
		echo "$msg"; read key;;

*.[jJ][aA][rR])
		jar tvf "$file" 2>&1 | "$GIT_PAGER";			\
		echo "$msg"; read key;;

*.[cC][lL][aA][sS][sS])
		javap -c -s -l -verbose `echo "$file"|sed 's/.class//'`	\
		| "$GIT_PAGER";						\
		echo "$msg"; read key;;

*.[lL][hH][aA] |							\
*.[lL][zZ][hH])
		lha -v "$file" | "$GIT_PAGER";				\
		echo "$msg"; read key;;

*.[rR][pP][mM])
		rpm -qilRsp -- "$file" | "$GIT_PAGER";			\
		echo "$msg"; read key;;

*.[dD][eE][bB])
		(echo "$file"; dpkg --info "$file";			\
		 echo; dpkg --contents "$file") | "$GIT_PAGER";		\
		echo "$msg"; read key;;

*)
		if test -x "$file"; then				\
		    FILE_VIEWER=file;					\
		    if test `uname` = "Linux"; then			\
			VIEWER_OPTIONS="-L";				\
		    fi;							\
		    "$FILE_VIEWER" $VIEWER_OPTIONS "$file" |		\
		    	grep "text\|data" >/dev/null 2>&1;		\
		    if test $? -eq 0; then				\
			"$GIT_PAGER" "$file";				\
		    else						\
			"$FILE_VIEWER" $VIEWER_OPTIONS "$file" |	\
			    grep "ELF" > /dev/null 2>&1;		\
			if test $? -eq 0; then				\
			    "$FILE_VIEWER" $VIEWER_OPTIONS "$file";	\
			    ldd "$file";				\
			fi;						\
		    fi;							\
		else							\
		    "$GIT_PAGER" "$file";				\
		fi;							\
		echo "$msg"; read key;;
esac

exit 0
