			VIEWER_OPTIONS="-sDEVIC=linux";			\
		    fi;							\
		fi;							\
		if test "$FILE_VIEWER"; then				\
		    if test "$DISPLAY"; then				\
			("$FILE_VIEWER" $VIEWER_OPTIONS "$file"		\
				 > /dev/null 2>&1 &);			\
		    else						\
			"$FILE_VIEWER" $VIEWER_OPTIONS "$file";		\
		    fi;							\
		else							\
		    echo "No Postscript viewer found in PATH.";		\
		    echo "$msgView"; read key;				\
		    "$GIT_PAGER" "$file";				\
		    echo "$msg"; read key;				\
		fi;;

